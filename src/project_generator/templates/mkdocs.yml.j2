site_name: {{ project_name }}
site_description: Documentation for {{ project_name }}
site_author: {{ author_name }}

theme:
  name: material
  features:
    - navigation.expand
    - navigation.indexes

plugins:
  - search

nav:
  - Home: index.md
  - Features: features/
  - AI Behavior: rules/ai_behavior.md
  - Context: CONTEXT.md

markdown_extensions:
  - pymdownx.highlight:
      anchor_linenums: true
  - pymdownx.inlinehilite
  - pymdownx.snippets
  - pymdownx.superfences
